class MaterialType(str, Enum):
    WOOD = "wood"
    GRANITE = "granite" 
    TILE = "tile"
    STAINLESS_STEEL = "stainless_steel"
    VINYL = "vinyl"
    LAMINATE = "laminate"
    UNKNOWN = "unknown"


class DetectedObject(BaseModel):
    name: str
    confidence: float
    bbox: List[int]  # [x, y, w, h]


class MaterialInfo(BaseModel):
    material_type: MaterialType
    area_sqm: float
    location: str


